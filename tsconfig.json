{
  "include": ["src/**/*.ts"],

  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "lib": ["ES2024"],
    "target": "ES2024",
    "module": "NodeNext",

    "sourceMap": true,
    "declaration": true,

    "isolatedModules": true,
    "strict": true,
    "verbatimModuleSyntax": true
  }
}
